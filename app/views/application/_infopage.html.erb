<section class='info-page'>
  <section class='profile'>
    <p>Name: <%= @user.name %></p>
    <p>Address: <%= @user.street_address %></p>
    <p>City: <%= @user.city %></p>
    <p>State: <%= @user.state %></p>
    <p>Zip Code: <%= @user.zip_code %></p>
    <p>Email: <%= @user.email %></p>
  </section>

  <aside class="info-page-buttons">
    <aside class="user-profile-buttons">
      <% if current_user && current_user.admin? %>
        <%= button_to "Edit Profile", edit_admin_user_path(@user.slug), method: :get %>
        <% if @user.merchant? %>
          <%= button_to "Downgrade Merchant", admin_downgrade_path, method: :patch, params: {slug: @user.slug} %>
        <% elsif @user.registered? %>
          <%= button_to "Upgrade User", admin_upgrade_path, method: :patch, params: {slug: @user.slug} %>
        <% end %>
      <% elsif current_user && current_user.registered? %>
        <%= button_to "Edit Profile", profile_edit_path, method: :get %>
      <% end %>
    </aside>
    <aside class="user-order-buttons">
      <% if current_user && current_user.admin? %>
        <% if @user.registered? %>
          <%= button_to "User Orders", admin_orders_path, method: :get, params: {user_id: @user} %>
        <% elsif @user.merchant? %>
          <%= button_to "Manage Merchant Items", admin_items_path(slug: @user.slug), method: :get, params: {user_id: @user} %>
        <% end %>
      <% end %>
    </aside>
  </aside>
</section>
