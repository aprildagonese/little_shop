<div class="user-list">
  <% @users.each do |user| %>
  <section class ='user'>

    <div class="user-<%=user.id%>-row">
      <% if current_user && current_user.admin? %>
        <div class="user-name">
          <%= link_to user.name, admin_merchant_path(user) if user.merchant? %>
          <%= link_to user.name, admin_user_path(user) if user.registered? %>
          <% if user.inactive? %>
            (Disabled)
          <% end %>
        </div>
      <% else %>
        <div class="user-name"><%= user.name %></div>
      <% end %>
      <section class="location-data">
        <p>City: <%= user.city %></p>
        <p>State: <%= user.state %></p>
      </section>
      <div class="activation-data">
        <% unless @view=="Users" %><p>Date Registered: <%= user.created_at.to_date.to_s %></p><% end %>
        <% if current_user && current_user.admin? %>
          <% if user.active? %>
            <%= button_to "Disable", admin_activation_path(user_id: user), method: :patch %>
          <% else %>
            <%= button_to "Enable", admin_activation_path(user_id: user), method: :patch %>
          <% end %>
        <% end %>
      </div>
    </div>

  </section>
  <% end %>
</div>
